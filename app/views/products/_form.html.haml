= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :brand
    = f.text_field :brand
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :options
    = f.text_area :options
  .field
    = f.label :features
    = f.text_area :features
  .field
    = f.label :design
    = f.text_area :design
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :slogan
    = f.text_field :slogan
  .actions
    = f.submit 'Save'
