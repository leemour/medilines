  %b Image:
  = image_tag(@product.image_url(:small).to_s)
%p
  %b Type:
  = @product.type
%p
  %b Price:
  = @product.price
%p
  %b Options:
  = @product.options
%p
  %b Features:
  = @product.features
%p
  %b Design:
  = @product.design
%p
  %b Description:
  = @product.description
%p
  %b Slogan:
  = @product.slogan

