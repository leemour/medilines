= form_for @brand, :html => {multipart: true} do |f|
  - if @brand.errors.any?
    #error_explanation
      %h2= "#{pluralize(@brand.errors.count, "error")} prohibited this brand from being saved:"
      %ul
        - @brand.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :logo
    = f.text_field :logo
  .field
    = f.label :image
    = image_tag(@brand.image_url) if @brand.image?
    = f.file_field :image
    = f.hidden_field :image_cache

    = f.label :remove_image
    = f.check_box :remove_image
  .field
    = f.label :flag
    = image_tag(@brand.flag_url) if @brand.flag?
    = f.file_field :flag
    = f.hidden_field :flag_cache

    = f.label :remove_flag
    = f.check_box :remove_flag
  .field
    = f.label :slogan
    = f.text_field :slogan
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :details
    = f.text_area :details
  .actions
    = f.submit 'Save'
